<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.the.man.product.model.repository.ProductMapper">
	
	<resultMap type="product" id="productResultSet">
		<result column="PRODUCT_NO" property="eventNo"/>
		<result column="PRODUCT_NAME" property="eventTitle"/>
		<result column="PRODUCT_CONTENT" property="eventContent"/>
		<result column="CREATE_DATE" property="createDate"/>
		<result column="PRODUCT_PRICE" property="productPrice"/>
		<result column="PRODUCT_STATUS" property="ProductStatus"/>
		<result column="CATEGORY_NO" property="categoryNo"/>
		
		
		<result column="COUNT" property="count"/>
		<result column="USER_NO" property="userNo"/>
		
		<result column="CHANGE_NAME" property="changeName"/>
	</resultMap>
	
	<resultMap type="ProductPhoto" id="ProductPhotoResultSet">
		<result column="PRODUCT_PHOTO_NO" property="productPhotoNo"/>
		<result column="PRODUCT_NO" property="productNo"/>
		<result column="ORIGIN_NAME" property="originName"/>
		<result column="CHANGE_NAME" property="changeName"/>
		<result column="FILE_LEVEL" property="fileLevel"/>
	</resultMap>
	
	<insert id="insert" parameterType="product">
		INSERT
			INTO
				PRODUCT
				(
				PRODUCT_NO,
				PRODUCT_TITLE,
				PRODUCT_CONTENT,
				USER_NO			
				)
			VALUES
				(
				#{prouctNo},
				#{productTitle},
				#{productContent},
				#{userNo}
				)
	
	</insert>
	
	<insert id="insertImg" parameterType="productPhoto">
		INSERT
			INTO
				PRODUCT_PHOTO
				(
				PRODUCT_PHOTO_NO,
				PRODUCT_NO,
				ORIGIN_NAME,
				CHANGE_NAME,
				FILE_LEVEL
				)
			VALUES
				(
				SEQ_TB_PRODUCT_PHOTO.NEXTVAL,
				#{productNo},
				#{originName},
				#{changeName},
				#{fileLevel}
			)
				
	
	</insert>
	
	
	
	
	
	
	
	
</mapper>